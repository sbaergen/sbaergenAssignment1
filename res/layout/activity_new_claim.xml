<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sbaergen.sbaergenassignment.NewClaim" >

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="Save" />

    <EditText
        android:id="@+id/claimName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Name of Claim"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <EditText
        android:id="@+id/claimDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_alignLeft="@+id/claimName"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/claimFrom"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/claimName"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/save"
        android:ems="10"
        android:focusable="false"
        android:hint="From"
        android:inputType="date" />

    <EditText
        android:id="@+id/claimTo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/claimFrom"
        android:layout_alignBottom="@+id/claimFrom"
        android:layout_toRightOf="@+id/save"
        android:ems="10"
        android:focusable="false"
        android:hint="To"
        android:inputType="date" />

</RelativeLayout>
